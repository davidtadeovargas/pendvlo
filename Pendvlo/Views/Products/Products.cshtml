@model Pendvlo.ViewModels.ProductsViewModel

@{    
    var removeContinueBtn = 0;

    /*
        Set the table title
     */
    string title = "undefined";
    string type = "";
    if (Model.Type==Pendvlo.ViewModels.TYPE.LIST)
    {
        title = "PRODUCTOS";
        removeContinueBtn = 1;
        type = "TYPE.VIEW";
    }
    else if (Model.Type == Pendvlo.ViewModels.TYPE.MODIFY)
    {
        title = "EDITAR PRODUCTO";
        type = "TYPE.MODIFY";
    }
    else if (Model.Type == Pendvlo.ViewModels.TYPE.DELETE)
    {
        title = "ELIMINAR PRODUCTO";
        type = "TYPE.DELETE";
    }

    ViewBag.Title = title;
}

@section header{

    <link rel="stylesheet" type="text/css" href="@Url.Content("/Content/Products.css")">
}

@section mainMenu{

    @{
        Html.RenderPartial("MainMenu/_ProductsMenu");
    }
}


<!-- Page Content -->
<div id="page-content-wrapper">
    <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
        <span class="hamb-top"></span>
        <span class="hamb-middle"></span>
        <span class="hamb-bottom"></span>
    </button>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="form_main">
                    <h4 class="heading">
                        <strong>@title</strong><span></span>
                    </h4>







                    <div class="row">
                        <div class="col-md-3">
                            <form action="#" method="get">
                                <div class="input-group">
                                    <!-- USE TWITTER TYPEAHEAD JSON WITH API TO SEARCH -->
                                    <input class="form-control" id="system-search" name="q" placeholder="Search for" required>
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                                    </span>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-9">
                            <table class="table table-list-search" id="tableProductos">
                                <thead>
                                    <tr>
                                        <th>Codigo</th>
                                        <th>Descripcion</th>
                                        <th>Precio</th>
                                        <th>Impuesto</th>
                                        <th>Activo</th>
                                        <th>Venta</th>
                                        <th>Fecha Creacion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Product in Model.Products)
                                    {
                                        var id = Product.ID;
                                        var Code = Product.code;
                                        var descrip = Product.descrip;
                                        var price = Product.price;
                                        var tax = Product.tax;
                                        var city = Product.avaible;
                                        var sales = Product.sales;
                                        var Created = Product.Created;

                                    <tr data-id="@id">
                                        <td>@Code</td>
                                        <td>@descrip</td>
                                        <td>@price</td>
                                        <td>@tax</td>
                                        <td>@city</td>
                                        <td>@sales</td>
                                        <td>@Created</td>
                                    </tr>
                                    }
                                    
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-3"></div>
                            <div class="col-md-3"></div>
                            <div class="col-md-3">
                                <button type="button" class="btn btn-info" id="btnContinue">Continuar</button>
                            </div>                            
                        </div>
                    </div>





                </div>
            </div>
        </div>
    </div>
</div>

<!-- /#page-content-wrapper -->

<script type="text/JavaScript">

    var TYPE = {
        DELETE: 1,
        MODIFY: 2,
        VIEW:3
    };

    var type = @type;
    var removeContinueBtn = @removeContinueBtn;

    $(document).ready(function () {

        var activeSystemClass = $('.list-group-item.active');
        var selectedTableId = -1;
        var currentSelectedTD = null;

        //something is entered in search form
        $('#system-search').keyup(function () {
            var that = this;
            // affect all table rows on in systems table
            var tableBody = $('.table-list-search tbody');
            var tableRowsClass = $('.table-list-search tbody tr');
            $('.search-sf').remove();
            tableRowsClass.each(function (i, val) {

                //Lower text for case insensitive
                var rowText = $(val).text().toLowerCase();
                var inputText = $(that).val().toLowerCase();
                if (inputText != '') {
                    $('.search-query-sf').remove();
                    tableBody.prepend('<tr class="search-query-sf"><td colspan="6"><strong>Searching for: "'
                        + $(that).val()
                        + '"</strong></td></tr>');
                }
                else {
                    $('.search-query-sf').remove();
                }

                if (rowText.indexOf(inputText) == -1) {
                    //hide rows
                    tableRowsClass.eq(i).hide();

                }
                else {
                    $('.search-sf').remove();
                    tableRowsClass.eq(i).show();
                }
            });
            //all tr elements are hidden
            if (tableRowsClass.children(':visible').length == 0) {
                tableBody.append('<tr class="search-sf"><td class="text-muted" colspan="6">No entries found.</td></tr>');
            }
        });

        /*
            When selecting a row in the table
         */
        $("#tableProductos tbody tr").click(function () {
           
            /*
                Change the selected color
             */
            $("#tableProductos tr").removeClass("highlight");
            var selected = $(this).hasClass("highlight");
            $("#data tr").removeClass("highlight");
            if (!selected) {
                $(this).addClass("highlight");
            }

            selectedTableId = $(this).attr("data-id"); //Id of the user

            /*
                Save the current row for deletion
             */
            currentSelectedTD = $(this);
        });

        /*
            Clic in continue button
         */
        $("#btnContinue").click(function () {

            /*
             * Validate selection in the table
             */
            if (selectedTableId == -1) {
                swal("Selecciona un cliente");
                return;
            }

            /*
                Continue to delete or to edit depending type
             */
            if (type == TYPE.MODIFY) {
                editType();
            }
            else if (type == TYPE.DELETE) {
                deleteType();
            }
            else if (type == TYPE.VIEW) {
                viewType();
            }

        });

        //When the user wants to view a product
        function viewType() {

            window.location = "/products/ViewProduct?ID=" + selectedTableId;
        }

        //When the user selected to edit
        function editType() {

            window.location = "/products/EditProductIndex?ID=" + selectedTableId;
        }

        //When the user selected to delete
        function deleteType() {

            /*
                Question if continue or not
             */
            swal({
                title: "¿Seguro que quieres continuar?",
                text: "",
                icon: "",
                buttons: [
                    'No',
                    'Si'
                ],
                dangerMode: false,
            }).then(function (isConfirm) {
                if (isConfirm) {
                    deleteProduct();
                } else {

                }
            })
        }


        /*
            Delete a product from the server
         */
        function deleteProduct(){

            $.ajax({
                type: "POST",
                url: "/products/DeleteProduct",
                contentType: "application/json; charset=utf-8",
                data: '{"id":"' + selectedTableId + '"}',
                dataType: "html",
                success: function (result) {
                    var json = JSON.parse(result);
                    if (json.Result_ == 1) {
                        swal("Producto eliminado correctamente");
                        currentSelectedTD.remove();
                    }
                    else {
                        swal(json.error);
                    }
                },
                error: function (xhr, status, error) {
                    alert(error);
                    console.log("Result: " + status + " " + error + " " + xhr.status + " " + xhr.statusText);
                }
            });
        }
    });






</script>